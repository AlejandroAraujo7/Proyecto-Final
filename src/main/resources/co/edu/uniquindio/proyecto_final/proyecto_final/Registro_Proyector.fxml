<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" prefHeight="403.0" prefWidth="341.0" fx:controller="co.edu.uniquindio.proyecto_final.proyecto_final.viewcontroller.RegistroViewController">
    <children>
        <!-- Title Label -->
        <Label layoutX="38.0" layoutY="25.0" text="Registro" textAlignment="CENTER" underline="true">
            <font>
                <Font name="Comfortaa SemiBold" size="34.0" />
            </font>
        </Label>

        <!-- Nombre -->
        <Label layoutX="42.0" layoutY="89.0" text="Nombre" />
        <TextField fx:id="txtNombre" layoutX="40.0" layoutY="105.0" prefHeight="24.0" prefWidth="103.0" promptText="Usuario" />

        <!-- Apellidos -->
        <Label layoutX="150.0" layoutY="89.0" text="Apellidos" />
        <TextField fx:id="txtApellidos" layoutX="146.0" layoutY="105.0" prefHeight="24.0" prefWidth="144.0" promptText="Grimaldos" />

        <!-- Cedula -->
        <Label layoutX="41.0" layoutY="140.0" text="Cedula" />
        <TextField fx:id="txtCedula" layoutX="40.0" layoutY="156.0" prefHeight="24.0" prefWidth="103.0" promptText="1234567" />

        <!-- Direccion -->
        <Label layoutX="44.0" layoutY="194.0" text="Direccion" />
        <TextField fx:id="txtDireccion" layoutX="39.0" layoutY="210.0" prefHeight="24.0" prefWidth="209.0" promptText="CR 24 #3-90" />

        <!-- Usuario -->
        <Label layoutX="43.0" layoutY="244.0" text="Usuario" />
        <TextField fx:id="txtUsuario" layoutX="39.0" layoutY="260.0" prefHeight="24.0" prefWidth="103.0" promptText="Santifuma" />

        <!-- Contraseña -->
        <Label layoutX="150.0" layoutY="244.0" text="Contraseña" />
        <TextField fx:id="txtPassword" layoutX="146.0" layoutY="260.0" prefHeight="24.0" prefWidth="144.0" promptText="******" />

        <!-- Rol -->
        <Label layoutX="44.0" layoutY="294.0" text="Rol" />
        <CheckBox fx:id="chkVendedor" layoutX="50.0" layoutY="310.0" text="Vendedor" />
        <CheckBox fx:id="chkAdministrador" layoutX="160.0" layoutY="310.0" text="Administrador" />

        <!-- Register Button -->
        <Button fx:id="btnRegistrar" layoutX="44.0" layoutY="349.0" text="Registrar" />

        <Button fx:id="btnLogin" layoutX="64.0" layoutY="409.0" text="Log in" onAction="#handleLoginButton" />

    </children>
</AnchorPane>
